{
    "baseUrl": "{{localBaseUrl}}",
    "key": "atlassian-connect-jira-addon",
    "description": "Add-on which demonstrates usage of Atlassian Connect in JIRA",
    "name": "Example Connect JIRA Add-on",
    "vendor": {
        "name": "Atlassian",
        "url": "http://www.atlassian.com/"
    },
    "enableLicensing": true,
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "modules": {
        "webItems": [
            {
                "name": {
                    "value": "My dropdown"
                },
                "location": "system.top.navigation.bar",
                "url": "/hello-world",
                "tooltip": {
                    "value": "My JIRA Connect Add-on",
                    "i18n": "foo.bar"
                },
                "key": "my-dropdown"
            },
            {
                "name": { "value": "A: First item" },
                "url": "/hello-world",
                "location": "my-dropdown/dropdown-section-1",
                "weight": 1
            },
            {
                "name": { "value": "A: Second item" },
                "url": "/hello-world",
                "location": "my-dropdown/dropdown-section-1",
                "weight": 2
            },
            {
                "name": { "value": "B: First item" },
                "url": "/hello-world",
                "location": "my-dropdown/dropdown-section-2",
                "weight": 1
            },
            {
                "name": { "value": "B: Second item" },
                "url": "/hello-world",
                "location": "my-dropdown/dropdown-section-2",
                "weight": 2
            }
        ],
        "webSections": [
            {
                "name": { "value": "Section A" },
                "location": "my-dropdown",
                "key": "dropdown-section-1"
            },
            {
                "name": { "value": "Section B" },
                "location": "my-dropdown",
                "key": "dropdown-section-2"
            }
        ],
        "webPanels": [
            {
                "name": {
                    "value": "Project Banner"
                },
                "location": "atl.jira.view.issue.right.context",
                "url": "/hello-world"
            }
        ],
        "generalPages": [
            {
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Hello World Webitem"
                },
                "url": "/hello-world",
                "conditions": [
                    {
                        "condition": "/conditions/hello-world"
                    }
                ]
            }
        ],
        "adminPages": [
            {
                "name": {
                    "value": "Config Admin Page"
                },
                "url": "/hello-world"
            }
        ],
        "configurePage": {
            "name": { 
                "value": "Add-on Configuration"
            },
            "url": "/configure",
            "location": "system.admin/globalsettings"
        }
    }
}
