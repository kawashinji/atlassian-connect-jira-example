{
    "baseUrl": "{{localBaseUrl}}",
    "key": "atlassian-connect-jira-addon",
    "description": "Add-on which demonstrates usage of Atlassian Connect in JIRA",
    "name": "Example Connect JIRA Add-on",
    "vendor": {
        "name": "Atlassian",
        "url": "http://www.atlassian.com/"
    },
    "enableLicensing": true,
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "modules": {
        "webItems": [
            {
                "name": {
                    "value": "Remote web item"
                },
                "context": "addon",
                "location": "system.top.navigation.bar",
                "url": "/hello-world",
                "tooltip": {
                    "value": "My JIRA Connect Add-on",
                    "i18n": "foo.bar"
                }
            },
            {
                "name": {
                    "value": "Dialog web item"
                },
                "context": "addon",
                "location": "system.top.navigation.bar",
                "url": "/hello-world",
                "target": {
                    "type": "dialog"
                },
                "tooltip": {
                    "value": "Web item that loads a dialog",
                    "i18n": "foo.bar"
                }
            },
            {
                "name": {
                    "value": "Inline Dialog web item"
                },
                "context": "addon",
                "location": "system.top.navigation.bar",
                "url": "/hello-world",
                "target": {
                    "type": "inlinedialog"
                },
                "tooltip": {
                    "value": "Web item that loads an inline dialog",
                    "i18n": "foo.bar"
                }
            }
        ],
        "webPanels": [
            {
                "name": {
                    "value": "Project Banner"
                },
                "location": "atl.jira.view.issue.right.context",
                "url": "/hello-world"
            }
        ],
        "generalPages": [
            {
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Hello World Webitem"
                },
                "url": "/hello-world",
                "conditions": [
                    {
                        "condition": "/conditions/hello-world"
                    }
                ]
            }
        ],
        "adminPages": [
            {
                "name": {
                    "value": "Config Admin Page"
                },
                "url": "/hello-world"
            }
        ],
        "configurePage": {
            "name": { 
                "value": "Add-on Configuration"
            },
            "url": "/configure",
            "location": "system.admin/globalsettings"
        }
    }
}
